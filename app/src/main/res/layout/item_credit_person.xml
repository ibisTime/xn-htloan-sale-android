<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_root"
        style="@style/style_my_item_root">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:text="录入"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <com.cdkj.wzcd.view.item.MyItemNormalLayout
            android:id="@+id/myItemNl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:txt_item_normal_title="姓\u3000名:">

        </com.cdkj.wzcd.view.item.MyItemNormalLayout>

        <com.cdkj.wzcd.view.item.MyItemNormalLayout
            android:id="@+id/myItemNl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:txt_item_normal_title="手机号:">

        </com.cdkj.wzcd.view.item.MyItemNormalLayout>

        <com.cdkj.wzcd.view.item.MyItemNormalLayout
            android:id="@+id/myItemNl_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:txt_item_normal_title="身份证:">

        </com.cdkj.wzcd.view.item.MyItemNormalLayout>

        <com.cdkj.wzcd.view.item.MyItemNormalLayout
            android:id="@+id/myItemNl_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:txt_item_normal_title="角\u3000色:">

        </com.cdkj.wzcd.view.item.MyItemNormalLayout>

        <com.cdkj.wzcd.view.item.MyItemNormalLayout
            android:id="@+id/myItemNl_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:txt_item_normal_title="关\u3000系:">

        </com.cdkj.wzcd.view.item.MyItemNormalLayout>


    </LinearLayout>

</layout>