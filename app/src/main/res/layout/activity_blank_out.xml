<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cdkj.wzcd.module.cartool.uservoid.BlankOutActivity">

        <com.cdkj.wzcd.view.MySelectLayout
            android:id="@+id/msl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:txt_select_title="客户姓名"></com.cdkj.wzcd.view.MySelectLayout>

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="left"
            android:hint="作废原因"
            android:maxLines="5"
            android:minLines="5"
            android:padding="5dp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_check_bg"
            android:text="提交"

            android:textColor="@color/white" />
    </LinearLayout>
</layout>
