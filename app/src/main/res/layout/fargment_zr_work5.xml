                app:txt_input_title="所属行业"></com.cdkj.wzcd.view.MyEditLayout2>

            <com.cdkj.wzcd.view.MySelectLayout2
                android:id="@+id/mySL_dwjjxz"
                android:layout_width="match_parent"
