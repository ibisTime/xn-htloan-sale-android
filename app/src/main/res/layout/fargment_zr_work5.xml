                app:txt_select_title="*是否自己单位"></com.cdkj.wzcd.view.MySelectLayout2>


            <com.cdkj.wzcd.view.MyEditLayout2
                android:id="@+id/myEL_sshy"
                android:layout_width="match_parent"
