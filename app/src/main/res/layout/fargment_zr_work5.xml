            <com.cdkj.wzcd.view.MyEditLayout2
                android:id="@+id/myEL_ysr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_input_hint="请输入"
                app:txt_input_title="*月收入"></com.cdkj.wzcd.view.MyEditLayout2>

            <com.cdkj.wzcd.view.MyEditLayout2
                android:id="@+id/myEL_gzmsjhklyfx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_input_hint="请输入"
                app:txt_input_title="*工作描述及还款来源分析"></com.cdkj.wzcd.view.MyEditLayout2>

            <com.cdkj.wzcd.view.MyMultipleLayout
