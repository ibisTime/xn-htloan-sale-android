                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="收入证明"></com.cdkj.wzcd.view.MyMultipleLayout>

            <com.cdkj.wzcd.view.MyMultipleLayout
                android:id="@+id/myML_dwqtzp"
