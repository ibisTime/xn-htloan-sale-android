<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        tools:context="com.cdkj.wzcd.module.business.cllh.CllhInputMessageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/mnl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="客户姓名">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/mnl_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="业务编号">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/mnl_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="贷款银行">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/mnl_monry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_content="0.00"
                app:txt_normal_title="贷款金额">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyEditLayout

                android:id="@+id/mihl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_input_hint="请输入落户日期"
                app:txt_input_title="落户日期">

            </com.cdkj.wzcd.view.MyEditLayout>

            <!--<EditText-->
            <!--android:id="@+id/et_time"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:background="@null"-->
            <!--android:hint="落户日期"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:singleLine="true" />-->

            <com.cdkj.wzcd.view.MySelectLayout
                android:id="@+id/mySl_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_select_title="车牌号">

            </com.cdkj.wzcd.view.MySelectLayout>

            <com.cdkj.wzcd.view.MyImageLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="发票"
                app:txt_image_title="发票">

            </com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="合格证"
                app:txt_image_title="合格证">

            </com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="交强险"
                app:txt_image_title="交强险"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="商业险"
                app:txt_image_title="商业险"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="二手车必传"
                app:txt_image_title="机动车证书"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="批单"
                app:txt_image_title="批单"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="车钥匙"
                app:txt_image_title="车钥匙"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="大本扫描件"
                app:txt_image_title="大本扫描件"></com.cdkj.wzcd.view.MyImageLayout>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_check_bg"
                android:text="保存"
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>
</layout>
